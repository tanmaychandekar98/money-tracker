doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet' href='/stylesheets/profile.style.css')
		link(rel='stylesheet' href='/stylesheets/index.style.css')
		link(rel='stylesheet' href='/stylesheets/userlist.style.css')
		link(rel='stylesheet', href='/bower/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bower/bootstrap/dist/js/bootstrap.min.js')
